# Enable URL rewriting
RewriteEngine On

# OpenRouter API key for chatbot (kept server-side, not in code)
SetEnv OPENROUTER_API_KEY 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


# Set the base directory
RewriteBase /living360/

# Redirect to www if not already
RewriteCond %{HTTP_HOST} ^example.com [NC]
RewriteRule ^(.*)$ http://www.example.com/living360/$1 [L,R=301]

# Remove .php extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [L]

# SEO-friendly URLs for pages
RewriteRule ^home$ index.php?page=home [L]
RewriteRule ^services$ index.php?page=services [L]
RewriteRule ^about$ index.php?page=about [L]
RewriteRule ^contact$ index.php?page=contact [L]
RewriteRule ^privacy-policy$ index.php?page=privacy-policy [L]
RewriteRule ^blogs$ index.php?page=blogs [L]
RewriteRule ^projects$ index.php?page=projects [L]
RewriteRule ^terms-conditions$ index.php?page=terms-conditions [L]

# SEO-friendly URLs for blog posts
RewriteRule ^blog/([^/]+)$ index.php?page=blogs&slug=$1 [L]

# SEO-friendly URLs for project details
RewriteRule ^project/([^/]+)$ index.php?page=projects&id=$1 [L]

# SEO-friendly URLs for service details
RewriteRule ^service/([^/]+)$ index.php?page=services&id=$1 [L]

# Set default character set and language
AddDefaultCharset UTF-8
DefaultLanguage en-US

# Enable gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Set cache headers for static files
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# Disable directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "^(wp-config\.php|php\.ini|\.htaccess)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to hidden files
<Files ".*">
    Order allow,deny
    Deny from all
</Files>

# Set security headers
<IfModule mod_headers.c>
    # Protect against XSS attacks
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME-type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Enable HSTS
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Custom error pages
ErrorDocument 404 /living360/index.php?page=404
ErrorDocument 403 /living360/index.php?page=403
ErrorDocument 500 /living360/index.php?page=500